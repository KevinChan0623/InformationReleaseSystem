@model InformationReleaseSystem.ViewModels.SignUp
@{
    ViewData["Title"] = "添加管理员账号";
    Layout = "~/Views/Console/Layout.cshtml";
}

<div style="margin: 0px 300px">
    <form asp-action="AddAccount" method="post">
        <div class="input-group" style="margin-top: 50px">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" class="form-control" placeholder="用户名" asp-for="Name">
        </div>
        <div class="input-group" style="margin-top: 30px">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" placeholder="密码" asp-for="Password">
        </div>
        <div class="input-group" style="margin-top: 30px">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input type="password" class="form-control" placeholder="确认密码" asp-for="PasswordSubmit">
        </div>
        <div asp-validation-summary="All" class="text-danger text-left" style="margin-left: 20px"></div>
        <button type="submit" class="btn btn-default pull-right" style="margin: 50px 0px">确认</button>
    </form>
</div>

@{
    if (ViewBag.Message == "Success")
    {
        <div class="alert alert-success" role="alert">
            <strong>添加成功!</strong>
            <a asp-action="AddAccount" class="text-right">我知道了</a>
        </div>
        ViewBag.Message = "";
    }
}