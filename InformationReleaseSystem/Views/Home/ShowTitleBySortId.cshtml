@model List<InformationReleaseSystem.ViewModels.SortTextUser>
@{
    if (Model.Count <= 0)
    {
        ViewData["Title"] = "NBA|CBA|足球|科技";
    }
    else
    {
        ViewData["Title"] = @Model[0].SortName;
    }
}

<div class="row">
    <div class="container" style="margin-top: 15px">
        @*新闻内容区*@
        <div class="list-group">
            @{
                if (Model.Count <= 0)
                {
                    <a class="list-group-item">
                        <h4>此栏目暂时无数据</h4>
                    </a>
                }
                else
                {
                    foreach (var modelText in Model)
                    {
                        <a class="list-group-item" asp-controller="Text" asp-action="Index" asp-route-TextId="@modelText.Id">
                            <h4>@modelText.Title</h4>
                            <p style="font-size: 3px; color: #989da2">@modelText.PublisherName 发布于 @modelText.Time.ToString()</p>
                        </a>
                    }
                }
            }
        </div>
    </div>
</div>