@model InformationReleaseSystem.ViewModels.ChangePassword
@{
    ViewData["Title"] = "更改密码";
    Layout = "~/Views/User/Layout.cshtml";
}

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form class="form-horizontal" asp-action="ChangePassword" method="post">
            <span class="heading"><a asp-controller="Home" asp-action="Index" style="color: #383838">EZ4ENCE</a></span>
            <div class="form-group">
                <input type="password" class="form-control" asp-for="Password" id="password" placeholder="新密码">
                <i class="fa fa-lock"></i>
            </div>

            <div class="form-group">
                <input type="password" class="form-control" asp-for="PasswordSubmit" id="passwordSubmit" placeholder="确认密码">
                <i class="fa fa-lock"></i>
            </div>

            <div asp-validation-summary="All" class="text-danger text-left" style="margin-left: 20px"></div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">修改</button>
            </div>
        </form>
    </div>
</div>

@{
    if (ViewBag.Message == "Success")
    {
        <div class="alert alert-success" role="alert">
            <strong>修改成功!</strong>
        </div>

        ViewBag.Message = "";
    }
}